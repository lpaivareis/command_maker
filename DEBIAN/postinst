#!/bin/bash
# DEBIAN/postinst

set -e

echo ""
echo "========================================"
echo "  Command Maker instalado com sucesso! "
echo "========================================"
echo ""
echo "Para ativar, adicione ao seu ~/.zshrc:"
echo ""
echo "  # Command Maker"
echo "  if [[ -f /usr/share/command-maker/command_maker.sh ]]; then"
echo "      source /usr/share/command-maker/command_maker.sh"
echo "  fi"
echo ""
echo "Ou execute: "
echo "  echo 'source /usr/share/command-maker/command_maker.sh' >> ~/.zshrc"
echo ""
echo "Depois execute: source ~/.zshrc"
echo ""

exit 0
